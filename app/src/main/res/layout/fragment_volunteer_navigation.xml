<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">



        <ToggleButton
            android:id="@+id/btnVUsersList"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/switch_toggle_list"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_margin="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btnVTasksList"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/switch_toggle_tasks"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btnVProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/switch_toggle_profile"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_margin="10dp"/>
    </LinearLayout>








</LinearLayout>