<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пользователь не выбран!"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView46"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите или добавьте его в правом боковом меню!"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В левом боковом меню находится основная информация о профиле."
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btn_fragment_noselneedy_help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/ic_btn_help_blue" />
    </RelativeLayout>

</LinearLayout>