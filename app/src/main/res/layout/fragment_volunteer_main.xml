<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <devs.mulham.horizontalcalendar.HorizontalCalendarView
                        android:id="@+id/cal_horizontalCal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#5474D6"
                        app:textColorSelected="#FFF">

                    </devs.mulham.horizontalcalendar.HorizontalCalendarView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/lout_bg"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <CalendarView
                        android:id="@+id/calendar_TasksCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:verticalScrollbarPosition="defaultPosition"
                        tools:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_VolunteerNotes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1">

                </FrameLayout>

                <Button
                    android:id="@+id/btn_volunteer_main_help"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_btn_help_blue"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_VolunteerPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/lout_bg"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_VolunteerSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="TextView"
                    android:textColor="@color/colorText"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_VolunteerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="TextView"
                    android:textColor="@color/colorText"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_VolunteerMiddleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="TextView"
                    android:textColor="@color/colorText"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_volun_main_copy"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:background="@mipmap/ic_btn_copy_blue" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_volunteer_main_id"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start"
                        android:layout_margin="5dp"
                        android:background="@mipmap/ic_btn_help_blue" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_VolunteerID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="2dp"
                android:text="TextView"
                android:textColor="@color/colorText"
                android:textSize="24dp"
                android:background="@drawable/lout_bg"
                android:padding="5dp"/>

            <Button
                android:id="@+id/btn_VolunteerSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="5dp"
                android:background="@drawable/lout_btn_blue"
                android:text="Настройки"
                android:textColor="@color/colorTextWhite"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>