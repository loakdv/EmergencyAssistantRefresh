<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dmitriy.emergencyassistant">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_main"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".Activities.Dialogs.Loading.Activity_Loading"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            android:label="Загрузка..."></activity>

        <activity android:name=".Activities.Based.Activity_AboutApp" />
        <activity
            android:name=".Activities.Dialogs.Adds.Activity_Dialog_AddVolunteer"
            android:label="Добавить соц. работника"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Info.Activity_SeeSocialInfo"
            android:label="Информация о соц. обслуживании"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Activity_See_Task"
            android:label="Новый сигнал"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Based.Activity_Main"
            android:icon="@drawable/ic_launcher_main"
            android:label="Соц. помощь">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Based.Activity_NeedySettings"
            android:icon="@drawable/ic_launcher_settings"
            android:label="Настройки">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Based.Activity_Needy" />
        <activity android:name=".Activities.Based.Activity_DoctorRelative" />
        <activity android:name=".Activities.Based.Activity_Login" />
        <activity
            android:name=".Activities.Dialogs.Lists.Activity_Dialog_Numbers"
            android:label="Номера"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Adds.Activity_Dialog_AddNumber"
            android:label="Добавить"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Lists.Activity_Dialog_Users"
            android:label="Родственники/врачи"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Adds.Activity_Dialog_AddNewUser"
            android:label="Добавить"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Adds.Activity_Dialog_AddNote"
            android:label="Новая заметка"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Info.Activity_Dialog_SendedSignal"
            android:label=""
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".Activities.Dialogs.Info.Activity_Dialog_StateCheck"
            android:label="Оценка состояния"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity android:name=".Activities.Based.Activity_Volunteer" />

        <receiver
            android:name=".Services.Widget_App"
            android:label="Соц. помощь">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@layout/widget_app_metadata" />
        </receiver>

        <service
            android:name=".Services.Service_AlarmState"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".Services.Service_BackGround"
            android:enabled="true"
            android:exported="true"
            android:process=":check_signal_service" />
    </application>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

</manifest>